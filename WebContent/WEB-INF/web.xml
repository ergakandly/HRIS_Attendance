<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>HRIS_Attendance</display-name>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>
		org.apache.struts.action.ActionServlet
	</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>
			/WEB-INF/struts-config.xml		
		</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>attendance.do</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>ImageRenderer</display-name>
    <servlet-name>ImageRenderer</servlet-name>
    <servlet-class>com.hris.attendance.servlet.ImageRenderer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageRenderer</servlet-name>
    <url-pattern>/ImageRenderer</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>com.hris.attendance.listener.AttendanceSessionListener</listener-class>
  </listener>
  <filter>
    <display-name>AttendanceFilter</display-name>
    <filter-name>AttendanceFilter</filter-name>
    <filter-class>com.hris.attendance.filter.AttendanceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AttendanceFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>